<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="actionBarSize">70dp</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:textColorHighlight">@color/lightGray</item>


    </style>

    <style name="DefaultNumberPickerTheme">
        <item name="colorControlNormal">#00FFFFFF</item>
    </style>

    <style name="DefaultCheckboxTheme">
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="buttonDefault">
        <item name="android:background">@drawable/button_round_default</item>
        <item name="android:textColor">@color/btnText</item>
        <item name="android:textSize">@dimen/btnText</item>
        <item name="android:layout_marginBottom">@dimen/btnMarginBottom</item>
        <item name="android:layout_marginLeft">@dimen/btnMarginLeft</item>
        <item name="android:layout_marginRight">@dimen/btnMarginRight</item>
    </style>

    <style name="editTextDefault">

    </style>

</resources>
